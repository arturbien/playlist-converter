{
  "include": ["./src"],
  "compilerOptions": {
    "module": "commonjs",
    "types": ["node"],
    "outDir": "build",
    "noEmit": false,
    "target": "es5",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  }
}
